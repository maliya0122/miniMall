/* pages/detail/childCpn/baseInfo/baseInfo.wxss */
.baseInfo{
  width: 100%;
  padding: 20rpx 10rpx;
  box-sizing: border-box;
}
.title{
  font-size: 30rpx;
  color: #000;
}
.price{
  margin-top: 24rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.now{
  font-size: 36rpx;
  color: red;
  margin-right: 20rpx;
}
.old{
  font-size: 28rpx;
  color: #181616;
  margin-right: 20rpx;
  text-decoration: line-through
}
.discount{
  font-size: 28rpx;
  text-align: center;
  width: 50rpx;
  height: 40rpx;
  background-color: red;
  color: #fff;
  border-radius: 30%;
}
.columns{
  display: flex;
  justify-content: space-between;
  margin:30rpx 0;
  padding-bottom: 30rpx;
  border-bottom: 1px solid #ccc;
}
.citems{
  font-size: 26rpx;
}
.services{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.sitems{
  font-size: 26rpx;
}
.sitems image{
  width: 26rpx;
  height: 26rpx;
  margin-right: 10rpx;
}