/* pages/cart/bottombar/bottombar.wxss */
.bottombar{
  width: 100%;
  height: 80rpx;
  background-color: #eee;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  line-height: 80rpx;
}
.icons{
  display: flex;
  flex-direction: row;
  margin-left: 30rpx;
  font-size: 30rpx;
  color: rgb(19, 1, 1);
}
.icon{
  position: absolute;
  top: 0;
  left: 0;
}
.text{
  margin-left: 15rpx;
}
.money{
  font-size: 30rpx;
}
.calcu{
  width: 200rpx;
  height: 100%;
  background-color: #ff5777;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
}